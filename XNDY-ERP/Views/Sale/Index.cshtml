        <a href="#" class="card_report_pic">
            <img src="~/bg/Report.png" alt="报表" />
        </a>
    </div>

    <div class="card fl ml20 mt20">
        <a href="@Url.Action("Index","CRM_KH")">
            <div class="card_text">
