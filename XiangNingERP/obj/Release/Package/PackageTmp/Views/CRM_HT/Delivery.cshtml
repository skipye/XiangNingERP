<div id="ResultList1" class="xTable form"></div>
<script type="text/javascript">
    $(function () {
        $(".inputsubbtn").click(function () {
            var ProSN = $("#ProSN").val();
            var SaleName = $("#SaleName").val();;
            var PostUrl = "@Url.Action("WOPageList","CRM_HT")";
            
            if (ProSN != "" || SaleName != "") {
                $.post(PostUrl, { ProSN: ProSN, SaleName: SaleName, status: 1 }, function (d) {
                    $("#ResultList1").html(d);
                });
            }
            else { alert("搜索条件为空！"); }
        });

        
    });
</script>