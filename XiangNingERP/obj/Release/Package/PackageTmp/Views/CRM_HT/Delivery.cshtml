@model ModelProject.SLabelsModel
@{
    ViewBag.Title = "送货单管理";
    Layout = null;
}

<div class="search">
    <ul class="searchtab"><li class="current">条件搜索</li></ul>
    <div style="clear:both"></div>
    <div class="searchbox clearfix form">
            <div class="form_item">
                <label class="label">合同编号：</label>
                <div class="form-field">
                   @Html.TextBoxFor(k => k.ProSN,  new { @class="inputtext"})
                </div>
            </div>
            <div class="form_item">
                <label class="label">订货人：</label>
                <div class="form-field">
                   @Html.TextBoxFor(k => k.SaleName,  new { @class="inputtext"})
                </div>
            </div>
            
            <div class="clear"></div>
            <div class="form-item-submit">
                <input type="button" value="提交" class="inputsubbtn fr mb20 mr20" style="width:100px;"/>
            </div>
    </div>
</div><!--search end -->
