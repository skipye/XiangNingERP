@model ModelProject.SYS_XLModel
@{
    Layout = null;
}

<div class="addmain">
 @using (Html.BeginForm("Add", "SYS_XL", FormMethod.Post, new { @class = "form mt20" }))
    { 
     @Html.HiddenFor(k=>k.id)
    <div class="mod normal">
		<div class="hd">
			<h2>产品系列基本信息</h2>
		</div>
		<div class="item">
			<label class="label"><em>*</em>编码：</label>
			<div class="form-field">
               @Html.TextBoxFor(k => k.SN, new { @class="inputtext"})
			</div>
		</div>
       <div class="item">
            <label class="label"><em>*</em>系列：</label>
            <div class="form-field">
                @Html.TextBoxFor(k => k.name,new{@class="inputtext"})
            </div>
        </div>
       
        <div class="item">
			<label class="label">备注：</label>
			<div class="form-field">
                @Html.TextAreaFor(k=>k.remark,new{style="width:430px;height:200px;",@class="inputtext"})
				@Html.ValidationMessageFor(k=>k.remark)
			</div>
		</div>
        <div class="item">
			<label class="label">&nbsp;</label>
			<div class="form-field">
                <a href="javascript:void(0)" class="submitbtn mt10" style="width:140px;">提交</a>
			</div>
		</div>
        <div class="clear"></div>
	</div>
 }
</div>

<script type="text/javascript">
    $(".submitbtn").click(function () {
        $(".form").submit();
    });

</script>
