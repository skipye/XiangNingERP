@using MvcPager.WebControls.Mvc;
@model PagedList<ModelProject.CRM_HTProModel>
@{ 
    Layout = null;
    int i = 1;
  }
<div class="xTable">

@if(Model!=null && Model.Any())
{
    <table>
        <col width="70px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="100px" />
        <col width="120px" />
        <col width="80px" />
        <col width="80px" />
        <tr class="fb">
            <th>序号</th>
            <th>产品名称</th>
            <th>木材</th>
            <th>色号</th>
            <th>是否定制</th>
            <th>长</th>
            <th>宽</th>
            <th>高</th>
            <th>单价（元）</th>
            <th>数量</th>
            <th>五金配件</th>
            <th>配饰</th>
            <th>雕花要求</th>
            <th>其他要求</th>
            <th>操作</th>
        </tr>
    @foreach(var item in Model)
    {
        <tr style="height:35px;">
            <td>@(i)</td>
            <td>@item.productXL _ @item.productName </td>
            <td>@item.woodName </td>
            <td>@item.colorName</td>
            <td>@(item.custom_flag!=null && item.custom_flag==true?"是":"否")</td>
            <td>@item.length </td>
            <td>@item.width </td>
            <td>@item.height </td>
            <td>@item.price</td>
            <td>@item.qty</td>
            <td>@item.hardware_part</td>
            <td><div class="tw" title="@item.decoration_part">@item.decoration_part</div></td>
            <td><div class="tw" title="@item.req_carve">@item.req_carve</div></td>
            <td><div class="tw" title="@item.req_others">@item.req_others</div></td>
            <td>
            @if (item.status == 0) { 
             <a href="javascript:void(0)" class="delone" ref="@item.id" url="@Url.Action("DeleteOne", "CRM_HTPro")">删除</a>
            }</td>
        </tr>
        i++;
    } 
    </table>
   
}
else{<p>暂无内容！</p>}

</div>
