@using ServiceProject;
@{
    ViewBag.Title = "采购管理";
    UserService USer = new UserService();
    var SonLeve = USer.GetCurrentUserName().SonLeve;
}

<div class="box">
@if (SonLeve.Contains("PO_AC") || SonLeve == "All")
{
    <div class="card fl ml20 mt20">
        <a href="@Url.Action("Index","PO_AC")">
            <div class="card_text">
                <h4 class="card_title">辅材采购管理</h4>
                <p class="card_subtitle">对辅材采购进行提交申请操作！</p>
            </div>
            <div class="card_pic">
                <img src="~/bg/Department.png" alt="辅材采购管理" />
            </div>
        </a>
    </div>
}@if (SonLeve.Contains("PO_KC") || SonLeve == "All")
{
    <div class="card fl ml20 mt20">
        <a href="@Url.Action("Index","PO_KC")">
            <div class="card_text">
                <h4 class="card_title">辅料库存管理</h4>
                <p class="card_subtitle">查看辅料库存情况！</p>
            </div>
            <div class="card_pic">
                <img src="~/bg/Position.png" alt="辅料库存管理" />
            </div>
        </a>
    </div>
}@if (SonLeve.Contains("Suppliers") || SonLeve == "All")
{
    <div class="card fl ml20 mt20">
        <a href="@Url.Action("Index","Suppliers")">
            <div class="card_text">
                <h4 class="card_title">供应商管理</h4>
                <p class="card_subtitle">对供应商进行添加、删除、修改等操作！</p>
            </div>
            <div class="card_pic">
                <img src="~/bg/gongyishang.jpg" alt="供应商管理" />
            </div>
        </a>
    </div>
}
</div>