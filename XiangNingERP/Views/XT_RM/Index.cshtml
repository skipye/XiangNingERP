@model ModelProject.SXT_RMModel
@{
    ViewBag.Title = "权限管理";
}

<p class="currpoint">
    <a href="@Url.Action("Index","Home")">首页</a>  -> 
    <a href="@Url.Action("Index","XT_RM")">行政中心</a>  -> 
    <a href="Javascript:void(0)" class="crrtab">权限管理</a>
</p>

<div class="search">
    <ul class="searchtab"><li class="current">条件搜索</li></ul>
    <div style="clear:both"></div>
    <div class="searchbox clearfix">
        @using (Html.BeginForm("Index", "XT_RM", FormMethod.Post, new { @class = "form" }))
        {
            <div class="form_item">
                <label class="label">姓名：</label>
                <div class="form-field">
                   @Html.TextBoxFor(k => k.Name,  new { @class="inputtext"})
                </div>
            </div>
            <div class="clear"></div>
            <div class="form-item-submit">
                <a href="#" class="submitbtn fr mb20 mr20" style="width:100px;">提交</a>
            </div>
        }
    </div>
</div><!--search end -->

<div class="mod">
    <div class="hd">
        <h2>搜索结果</h2>
        <ul class="filter">
            <li class="adddialog" url="@Url.Action("Add","XT_RM")" title="新增" ref="0"><a class="btn bg-green" href="javascript:void(0)"><span class="wh">增加</span></a></li>
            <li><a class="selectAll btn bg-orange" href="javascript:void(0)"><span class="wh">全选</span></a></li>
            <li><a class="unSelect btn bg-orange" href="javascript:void(0)"><span class="wh">全不选</span></a></li>
            <li><a class="delSelect btn bg-orange" href="javascript:void(0)" url="@Url.Action("DeleteMore","XT_RM")" ><span class="wh">删除选中</span></a></li>
        </ul>
    </div>
</div>

<div id="ResultList" class="xTable">
   @Html.Action("PageList", "XT_RM", new { SRmodels=Model})
</div>