@model ModelProject.SuppliersModel
@{
    Layout = null;
}

<div class="addmain">
 @using (Html.BeginForm("Add", "Suppliers", FormMethod.Post, new { @class = "form mt20" }))
    { 
     @Html.HiddenFor(k=>k.id)
    <div class="mod normal">
		<div class="hd">
			<h2>客户基本信息</h2>
		</div>
		<div class="item">
			<label class="label"><em>*</em>客户名称：</label>
			<div class="form-field">
               @Html.TextBoxFor(k => k.name, new { @class="inputtext"})
			</div>
		</div>
       <div class="item">
            <label class="label"><em>*</em>客户简称：</label>
            <div class="form-field">
                @Html.TextBoxFor(k => k.shortname,new{@class="inputtext"})
            </div>
        </div>
        <div class="item">
			<label class="label"><em>*</em>客户地址：</label>
			<div class="form-field">
                @Html.TextBoxFor(k=>k.address,new{@class="inputtext"})
			</div>
		</div>
        <div class="item">
			<label class="label"><em>*</em>联系人：</label>
			<div class="form-field">
                @Html.TextBoxFor(k=>k.linkman,new{@class="inputtext"})
			</div>
		</div>
        <div class="item">
			<label class="label"><em>*</em>联系电话：</label>
			<div class="form-field">
                @Html.TextBoxFor(k=>k.tel,new{@class="inputtext"})
			</div>
		</div>
        
        <div class="item">
			<label class="label">备注：</label>
			<div class="form-field">
                @Html.TextAreaFor(k=>k.remark,new{style="width:430px;height:100px;",@class="inputtext"})
				@Html.ValidationMessageFor(k=>k.remark)
			</div>
		</div>
        <div class="item">
			<label class="label">&nbsp;</label>
			<div class="form-field">
                <a href="javascript:void(0)" class="submitbtn mt10" style="width:140px;">提交</a>
			</div>
		</div>
        <div class="clear"></div>
	</div>
 }
</div>

<script type="text/javascript">
    $(".submitbtn").click(function () {
        $(".form").submit();
    });

</script>
