@using ServiceProject;
@{
    ViewBag.Title = "系统管理";
    UserService USer = new UserService();
    var SonLeve = USer.GetCurrentUserName().SonLeve;
}

<div class="box">
@if (SonLeve.Contains("XT_Wood") || SonLeve == "All")
{
    <div class="card fl ml20 mt20">
        <a href="@Url.Action("Index","XT_Wood")">
            <div class="card_text">
                <h4 class="card_title">木材系数维护</h4>
                <p class="card_subtitle">对木材单价、出材率、比重维护</p>
            </div>
            <div class="card_pic">
                <img src="~/bg/Department.png" alt="木材系数维护" />
            </div>
        </a>
    </div>
}@if (SonLeve.Contains("XT_RM") || SonLeve == "All")
{
    <div class="card fl ml20 mt20">
        <a href="@Url.Action("Index","XT_RM")">
            <div class="card_text">
                <h4 class="card_title">权限管理</h4>
                <p class="card_subtitle">管理用户的基本权限，可以去修改增加、修改、删除用户权限</p>
            </div>
            <div class="card_pic">
                <img src="~/bg/Department.png" alt="权限管理" />
            </div>
        </a>
    </div>
}@if (SonLeve.Contains("XT_RM0") || SonLeve == "All")
{
    <div class="card fl ml20 mt20">
        <a href="@Url.Action("WO", "XT_RM")">
            <div class="card_text">
                <h4 class="card_title">特批生产</h4>
                <p class="card_subtitle">管理财务实际收款没有达到合同总金额50%的时候，特殊安排生产</p>
            </div>
            <div class="card_pic">
                <img src="~/bg/Department.png" alt="特批生产" />
            </div>
        </a>
    </div>
}
</div>