@model ModelProject.SINV_MCModel
@{
    ViewBag.Title = "木材管理";
}

<p class="currpoint">
    <a href="@Url.Action("Index","Home")">首页</a>  -> 
    <a href="@Url.Action("Index","XT")">系统管理</a>  -> 
    <a href="Javascript:void(0)" class="crrtab">成本核算管理</a>
</p>

<div class="search">
    <ul class="searchtab"><li class="current">条件搜索</li></ul>
    <div style="clear:both"></div>
    <div class="searchbox clearfix">
        @using (Html.BeginForm("Index", "XT_Wood", FormMethod.Post, new { @class = "form" }))
        {
            <div class="form_item">
                <label class="label">名称：</label>
                <div class="form-field">
                    @Html.TextBoxFor(k=>k.name,new{@class="inputtext",@placeholder="请输入查询名称"})
                </div>
            </div>
            <div class="clear"></div>
            <div class="form-item-submit">
                <a href="#" class="submitbtn fr mb20 mr20" style="width:100px;">提交</a>
            </div>
        }
    </div>
</div><!--search end -->

<div class="mod">
    <div class="hd">
        <h2>搜索结果</h2>
        <ul class="filter">
            <li class="adddialog" url="@Url.Action("Reckon","XT_Wood")" title="成本核算" ref="0"><a class="btn bg-green" href="javascript:void(0)"><span class="wh">成本核算</span></a></li>
            
        </ul>
    </div>
</div>

<div id="ResultList" class="xTable">
   @Html.Action("PageList", "XT_Wood", new { SRmodels=Model})
</div>