@model ModelProject.SYS_SHModel
@{
    Layout = null;
}

<div class="addmain">
 @using (Html.BeginForm("Add", "SYS_SH", FormMethod.Post, new { @class = "form mt20" }))
    { 
     @Html.HiddenFor(k=>k.id)
    <div class="mod normal">
		<div class="hd">
			<h2>色号基本信息</h2>
		</div>
		<div class="item">
			<label class="label"><em>*</em>色号编码：</label>
			<div class="form-field">
               @Html.TextBoxFor(k => k.SN, new { @class="inputtext"})
			</div>
		</div>
       <div class="item">
            <label class="label"><em>*</em>色号：</label>
            <div class="form-field">
                @Html.TextBoxFor(k => k.name,new{@class="inputtext"})
            </div>
        </div>
        <div class="item">
			<label class="label"><em>*</em>色值：</label>
			<div class="form-field">
                @Html.TextBoxFor(k=>k.RGB,new{@class="inputtext"})
                <span class="red">备注：填写方式如#FFFFFF</span>
               
			</div>
		</div>
        <div class="item" style="height:150px;">
			<label class="label"><em>*</em>颜色示样：</label>
			<div class="form-field">
                @Html.TextBoxFor(k=>k.img,new{@class="inputtext imgupload"})
                 <img src="@Model.img" class="ConvertImg picreload" />
			</div>
		</div>
        <div class="item">
			<label class="label">备注：</label>
			<div class="form-field">
                @Html.TextAreaFor(k=>k.remark,new{style="width:430px;height:140px;",@class="inputtext"})
				@Html.ValidationMessageFor(k=>k.remark)
			</div>
		</div>
        <div class="item">
			<label class="label">&nbsp;</label>
			<div class="form-field">
                <a href="javascript:void(0)" class="submitbtn mt10" style="width:140px;">提交</a>
			</div>
		</div>
        <div class="clear"></div>
	</div>
 }
</div>

<script type="text/javascript">
    $(".submitbtn").click(function () {
        $(".form").submit();
    });

    //图片上传功能
    $(".imgupload").bind("click", function () {
        var toUrl = '@Url.Action("Index","FileManage")';
                var TabTitle = "图片上传";
                var $dialog = $("#dialog_img");
                $dialog.html("");
                $dialog.dialog("option", "title", TabTitle);
                $dialog.dialog("open");
                $.get(toUrl, {}, function (d) { $dialog.html(d); });
            });
</script>
